            <Button.Flyout>
                <MenuFlyout>
                    <MenuFlyoutSubItem Text="Concurrent sorts">
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="Distributive sorts">
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="Exchange sorts">
                        <MenuFlyoutItem x:ConnectionId='36' Text="3-smooth comb (iterative) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='37' Text="3-smooth comb (parallel) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='38' Text="3-smooth comb (recursive) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='39' Text="Bubble sort"                             />
                        <MenuFlyoutItem x:ConnectionId='40' Text="Circle (iterative) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='41' Text="Circle (recursive) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='42' Text="Cocktail shaker sort"                             />
                        <MenuFlyoutItem x:ConnectionId='43' Text="Comb sort"                             />
                        <MenuFlyoutItem x:ConnectionId='44' Text="Gnome sort"                             />
                        <MenuFlyoutItem x:ConnectionId='45' Text="Intro sort (Array.Sort on C#)"                             />
                        <MenuFlyoutItem x:ConnectionId='46' Text="Odd-even sort"                             />
                        <MenuFlyoutItem x:ConnectionId='47' Text="Optimized stooge sort"                             />
                        <MenuFlyoutItem x:ConnectionId='48' Text="Optimized stooge (studio) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='49' Text="Quick (dual-pivot) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='50' Text="Quick (left/left) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='51' Text="Quick (left/left middle pivot) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='52' Text="Quick (left/right) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='53' Text="Quick (left/right parallel) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='54' Text="Quick (stable) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='55' Text="Quick (stable middle pivot) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='56' Text="Quick (stable parallel) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='57' Text="Quick (stackless) sort"                             />
                        <MenuFlyoutItem x:ConnectionId='58' Text="Weird insertion sort"                             />
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="Impractical sorts">
                        <MenuFlyoutItem x:ConnectionId='25' Text="Bogo sort"                             />
                        <MenuFlyoutItem x:ConnectionId='26' Text="Bozo sort"                             />
                        <MenuFlyoutItem x:ConnectionId='27' Text="Cocktail bogo sort"                             />
                        <MenuFlyoutItem x:ConnectionId='28' Text="Less bogo sort"                             />
                        <MenuFlyoutItem x:ConnectionId='29' Text="Quad stooge sort"                             />
                        <MenuFlyoutItem x:ConnectionId='30' Text="Silly sort"                             />
                        <MenuFlyoutItem x:ConnectionId='31' Text="Slow sort"                             />
                        <MenuFlyoutItem x:ConnectionId='32' Text="Snuffle sort"                             />
                        <MenuFlyoutItem x:ConnectionId='33' Text="Stable stooge sort"                             />
                        <MenuFlyoutItem x:ConnectionId='34' Text="Stooge sort"                             />
                        <MenuFlyoutItem x:ConnectionId='35' Text="Ternary slow sort"                             />
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="Insertion sorts">
                        <MenuFlyoutItem x:ConnectionId='23' Text="Insertion sort"                             />
                        <MenuFlyoutItem x:ConnectionId='24' Text="Shell sort"                             />
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="Merge sorts">
                        <MenuFlyoutItem x:ConnectionId='19' Text="Binary merge sort"                             />
                        <MenuFlyoutItem x:ConnectionId='20' Text="Grail sort"                             />
                        <MenuFlyoutItem x:ConnectionId='21' Text="Lazy stable sort"                             />
                        <MenuFlyoutItem x:ConnectionId='22' Text="Merge sort"                             />
                    </MenuFlyoutSubItem>
                    <MenuFlyoutSubItem Text="Selection sorts">
                        <MenuFlyoutItem x:ConnectionId='16' Text="Max heap sort"                             />
                        <MenuFlyoutItem x:ConnectionId='17' Text="Min heap sort"                             />
                        <MenuFlyoutItem x:ConnectionId='18' Text="Selection sort"                             />
                    </MenuFlyoutSubItem>
                </MenuFlyout>
            </Button.Flyout>

        </Button>

