            <ComboBoxItem>8: Cube root curve</ComboBoxItem>
            <ComboBoxItem>9: Fifth root curve</ComboBoxItem>
            <ComboBoxItem>10: Sine wave</ComboBoxItem>
            <ComboBoxItem>11: Cosine wave</ComboBoxItem>
